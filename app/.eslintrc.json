{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier",
        "eslint-plugin-html"
    ],
    "rules": {
        "prettier/prettier": ["error"],
        "new-cap": "off", /* Use 'cause of @Component from Angular, it violates that rule */ 
        "require-jsdoc": "error",
        "no-invalid-this": "warn"
    },
    "ignorePatterns": ["./node_modules/*", "package-lock.json", "./assets/style-template"]
}
